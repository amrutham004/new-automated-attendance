# Environment Configuration for Automated Attendance System
# Copy this file to .env and update the values

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-123456789
JWT_SECRET=your-jwt-secret-key-change-this-in-production-987654321

# Database Configuration
DB_FILE=backend/data/attendance.db
DATA_DIR=backend/data

# Face Recognition Configuration
LOW_LIGHT_THRESHOLD=50.0
APPLY_HISTOGRAM_EQUALIZATION=true

# Email Configuration (Optional)
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@school.edu

# Logging Configuration
LOG_LEVEL=INFO

# CORS Configuration (for production)
ALLOWED_ORIGINS=https://your-site.netlify.app,https://your-domain.com

# Rate Limiting Configuration
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_FACE_VERIFY=10/minute
RATE_LIMIT_ADMIN_UPLOAD=20/hour
RATE_LIMIT_GENERAL=100/hour

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_TIMEOUT_MINUTES=1440

# File Upload Configuration
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Production Configuration
ENVIRONMENT=development
DEBUG=false
HTTPS_ONLY=false
